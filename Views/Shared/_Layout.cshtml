<body class="antialiased">


    <div class="wrapper">
        <header class="navbar navbar-expand-md navbar-light d-print-none">
            <div class="container-xl">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-brand">
                    <span><i class="fa fa-send-o" style="color:red;font-size: 30px"></i></span>
                    <span style="margin-left: 18px;font-size: 20px;color:black">SalesTrack</span>

                </div>

                <div class="navbar-nav flex-row order-md-last">

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">
                            <div class="d-none d-xl-block ps-2">
                                <div><b>@Session["UserName"]</b></div>
                                <div class="mt-1 small text-muted">@Session["Department"]</div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <a href="@Url.Action("Logout","Login")" class="dropdown-item">Logout</a>
                        </div>
                    </div>


                </div>


            </div>


        </header>




        <div class="navbar-expand-md">
            <div class="collapse navbar-collapse" id="navbar-menu">

                <div class="navbar navbar-light">

                    <div class="container-xl">

                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link" href="/Dashboard">
