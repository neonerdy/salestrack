                            <li class="nav-item">
                                <a class="nav-link" href="/OrderMonth">
                                    <span class="nav-link-title">
                                        Order
                                    </span>
                                </a>
                            </li>



                            <li class="nav-item">
                                <a class="nav-link" href="/Setting">
                                    <span class="nav-link-title">
                                        Setting
                                    </span>
                                </a>
                            </li>







                        </ul>

                    </div>

                </div>

            </div>


        </div>


        <div class="page-wrapper">
            @RenderBody()
        </div>


    </div>





   
